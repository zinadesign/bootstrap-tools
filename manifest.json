{
  "manifest_version": 2,

  "name": "Bootstrap Tools",
  "description": "Bootstrap columns, greed, breakpoints switcher, viewport size info.",
  "version": "0.6",

  "background": {
    "persistent": false,
    // "page": "background.html"
    "scripts": [ "background.js" ]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Bootstrap Tools"
  },
  "content_scripts": [ {
    // "all_frames": true,
    "css": [ "css/style.css" ],
    "js":  [
      "js/jquery.js",
      "js/show.js",
      "js/hide.js"
    ],
    "matches": [ "*://*/*" ]
  } ],
  "permissions": [
    "activeTab"
  ]
}
